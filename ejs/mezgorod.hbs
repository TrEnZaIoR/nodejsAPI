			<h1>Маршруты дальнего следования</h1>
    <p><a class="btn btn-warning" href="/mezgorodcreate">Добавить маршрут дальнего следования</a></p>
    <table class="table">
        <tr> 
            <th scope="col">ID</th> 
            <th scope="col">Из</th> 
            <th scope="col">В</th> 
            <th scope="col">Время отправления</th> 
            <th scope="col">Время прибытия</th> 
            <th scope="col">Кол-во мест</th> 
            <th scope="col">Кол-во оставшихся</th>
            <th scope="col">Цена</th> 
            <th scope="col">Имя водителя</th> 
            <th scope="col">Гос номер</th> 
            <th></th> 
        </tr>
        {{#each mezgorod}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.p_o}}</td>
                <td>{{this.p_p}}</td>
                <td>{{this.time_o}}</td>
                <td>{{this.time_p}}</td>
                <td>{{this.count_m}}</td>
                <td>{{this.count_mo}}</td>
                <td>{{this.price}}</td>
                <td>{{this.name_vod}}</td>
                <td>{{this.gos_nomer}}</td>
                <td>
                    <a class="btn btn-success" href="/mezgorodedit/{{this.id}}">Изменить</a>
                    <a class="btn btn-light" href="/mezgorodshow/{{this.id}}">Просмотр</a>||
                    <form action="delete1/{{this.id}}" method="POST" style="display:inline;">
                        <input class="btn btn-danger" type="submit" value="Удалить" />
                    </form>
                </td>
            </tr>
        {{/each}}
    </table>





